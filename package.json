{
  "name": "arm-server",
  "author": "BeeeQueue <adam@haglund.dev>",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "homepage": "https://arm.haglund.dev/docs",
  "packageManager": "pnpm@7.32.2",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "onchange --initial --kill 'src/**' pnpm-lock.yaml -- pnpm --silent start",
    "docs": "redoc-cli build docs/openapi.yaml",
    "docs:dev": "onchange --initial --kill docs/openapi.yaml -- pnpm --silent docs",
    "docker:build": "docker build . --tag arm-server",
    "docker:start": "pnpm --silent docker:build; pnpm --silent docker:run",
    "docker:run": "docker run -it --rm --name arm -p 3000:3000 arm-server",
    "fetch-data": "tsx bin/update.ts --exit",
    "lint": "eslint src",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:create": "knex migrate:make --knexfile knexfile.ts -x ts",
    "start": "pnpm --silent run migrate && tsx src/index.ts",
    "test": "NODE_ENV=test pnpm --silent run migrate && vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "is-ci || husky install"
  },
  "resolutions": {
    "@types/node": "18.16.9",
    "esbuild": "0.17.18",
    "node-fetch": "npm:node-fetch-native@1.1.0"
  },
  "dependencies": {
    "@fastify/cors": "8.2.1",
    "@fastify/helmet": "10.1.0",
    "@sentry/node": "7.50.0",
    "@tsconfig/node16-strictest": "1.0.4",
    "better-sqlite3": "8.3.0",
    "fastify": "4.17.0",
    "is-ci": "3.0.1",
    "knex": "2.4.2",
    "nanoid": "4.0.2",
    "ohmyfetch": "0.4.21",
    "pino": "8.11.0",
    "pino-pretty": "10.0.0",
    "remeda": "1.14.0",
    "sucrase": "3.32.0",
    "tsx": "3.12.7",
    "type-fest": "3.9.0",
    "typescript": "5.0.4",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "2.1.0",
    "@types/json-schema": "7.0.11",
    "@types/node": "18.16.9",
    "@vitest/coverage-c8": "0.29.8",
    "ajv": "8.12.0",
    "dotenv": "16.0.3",
    "eslint": "8.39.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "onchange": "7.1.0",
    "prettier": "2.8.8",
    "redoc-cli": "0.13.21",
    "tsconfig-paths": "4.2.0",
    "vitest": "0.29.8"
  }
}
