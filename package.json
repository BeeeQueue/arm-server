{
  "name": "arm-server",
  "author": "BeeeQueue <adam.lj.haglund@gmail.com>",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/BeeeQueue/arm-server",
  "engines": {
    "node": ">=14.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "fetch-data": "ts-node bin/update.ts",
    "lint": "eslint src",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:create": "knex migrate:make --knexfile knexfile.ts -x ts",
    "start": "yarn run migrate && ts-node -r tsconfig-paths/register src/index.ts",
    "test": "cross-env NODE_ENV=test yarn run migrate && yarn jest"
  },
  "resolutions": {
    "@types/node": "14.17.2"
  },
  "dependencies": {
    "@sentry/node": "6.3.6",
    "@sentry/tracing": "6.3.6",
    "cross-env": "7.0.3",
    "envsafe": "2.0.3",
    "fastify": "3.17.0",
    "fastify-helmet": "5.3.1",
    "got": "11.8.2",
    "knex": "0.95.6",
    "nanoid": "3.1.23",
    "sqlite3": "5.0.2",
    "ts-json-validator": "0.7.1",
    "ts-node": "9.1.1",
    "type-fest": "1.1.3",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "0.2.0",
    "@tsconfig/node14": "1.0.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.2",
    "dotenv": "9.0.2",
    "eslint": "7.27.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "11.0.0",
    "pino-pretty": "5.0.1",
    "prettier": "2.3.0",
    "ts-jest": "26.5.6",
    "ts-node-dev": "1.1.6",
    "tsconfig-paths": "3.9.0"
  }
}
